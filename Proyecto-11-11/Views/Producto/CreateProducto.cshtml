@using Proyecto_11_11.Models.Entities;
@model Producto;



@* HTML *@


<h1 style="text-align:center">INGRESAR PRODUCTO NUEVO</h1>

<a asp-action="Index" asp-controller="Producto" style="margin-bottom:10px;">Volver</a>

<form asp-action="CreateProducto">
    <div class="form-group">
        <label asp-for="Nombre">NOMBRE</label>
        <input asp-for="Nombre" type="text" class="form-control" style="margin-top:5px;" />
    </div>

    <div class="form-group">
        <label asp-for="PrecioUnitario">PRECIO UNITARIO</label>
        <input asp-for="PrecioUnitario" type="text" class="form-control" style="margin-top:5px;" />
    </div>
    <div class="form-group">
        <label asp-for="PrecioMayorista">PRECIO Mayorista</label>
        <input asp-for="PrecioMayorista" type="text" class="form-control" style="margin-top:5px;" />
    </div>

    <button type="submit" class="btn btn-outline-warning" style="margin-top:5px;">AGREGAR</button>
</form>